@model CampervibeBooking.UI.ViewModels.Booking.IndexViewModel

@{
    ViewBag.Title = "Index";
}

<h1>Index</h1>

<table class="table ">
    <thead>
        <tr>
            <th>
                Booking Number
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Vehicle
            </th>
            <th>
                Customer
            </th>
            <th>
                Total
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var booking in Model.Bookings)
    {
        <tr>
            <td>
                @booking.BookingNumber
            </td>
            <td>
                @String.Format("{0:dd/MM/yyyy}", booking.StartDate)
            </td>
            <td>
                @String.Format("{0:dd/MM/yyyy}", booking.EndDate)
            </td>
            <td>
                @booking.VehicleName
            </td>
            <td>
                @booking.CustomerName
            </td>
            <td>
                @String.Format("£{0:#####0.00}", booking.Total)
            </td>
        </tr>
    }
    </tbody>
</table>