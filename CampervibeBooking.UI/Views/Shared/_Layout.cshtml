<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @RenderSection("Canonical", required: false)
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/campervibebooking")
    @RenderSection("CSS", required: false)
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/campervibebooking")
    @RenderSection("Scripts", required: false)
</head>
<body class="campervibe">
    <header role="banner">
        <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="../" class="navbar-brand">
                        Campervibe
                    </a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown-open">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Vehicle</a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="http://campervibevehicleinventory.azurewebsites.net/vehicle/index">List</a></li>
                                <li><a href="http://campervibevehicleinventory.azurewebsites.net/vehicle/add">Add</a></li>
                            </ul>
                        </li>
                        <li class="dropdown-open">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Bookings</a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("List", "Index", "Booking")</li>
                                <li>@Html.ActionLink("Make", "Make", "Booking")</li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="container-fluid">
        @RenderBody()
    </main>
</body>
</html>
